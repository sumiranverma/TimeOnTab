{
    "manifest_version": 3,
    "name": "Time On Tab",
    "version": "1.0",
    "description": "Track time spent on tasks and websites.",
    "permissions": ["storage", "tabs", "notifications"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
}
  